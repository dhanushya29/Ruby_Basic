puts "OOO".prepend("hello, ", "world")
puts "Fig Newton".swapcase
puts "fig".upcase.reverse
puts "grape".reverse * 10 + "!!!"

first = "Joe"
last = "Smith"
# + does concatenation

full = first + last
#{} does interpolation
puts first.upcase
puts first
full = "#{first}+#{last}"
puts full

color = "blue"
fruit = "berry"
puts color + fruit

color = "black"
puts color
